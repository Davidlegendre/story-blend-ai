---
import { Book, typeBook } from "@/lib/components/Book";
import Layout from "@/lib/components/Layout.astro";
import Buttons from '@/lib/components/Buttons'
import TabsSection from "@/lib/components/TabsSection";

const codeStrings = [
  `<Book 
  title="Titulo [opcional, default: 'Titulo']" 
  subtitle="subtitulo [opcional]" 
  authors="autores [opcional]"
  type={typeBook.simple}
  urlLogo="local o url [opcional]"
  logoWidth={number} //[opcional, default: 22]
/>`,
  `<Book
  title="Titulo [opcional, default: 'Titulo']" 
  subtitle="subtitulo [opcional]" 
  authors="autores [opcional]"
