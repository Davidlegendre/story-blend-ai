  urlImage="local o url [Portada, Opcional]"
/>`,
  `<Book
  title="Titulo [opcional, default: 'Titulo']" 
  subtitle="subtitulo [opcional]" 
  authors="autores [opcional]"
  type={typeBook.ambosMinimal}
  color="darkslateblue" //[opcional, default: rgb(255, 159, 15)]
  urlLogo="local o url [opcional]"
  logoWidth={number} //[opcional, default: 22]}
/>`,
`<Book
  title="Titulo [opcional, default: 'Titulo']" 
  subtitle="subtitulo [opcional]" 
  authors="autores [opcional]"
  type={typeBook.ambos} //ambos es default
  color="linear-gradient(0deg, rgba(34,193,195,1) 0%, rgba(253,187,45,1) 100%)" //[opcional, default: rgb(255, 159, 15)]
